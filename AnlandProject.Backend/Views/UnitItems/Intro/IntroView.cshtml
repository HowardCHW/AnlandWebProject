@model AnlandProject.Service.BusinessModel.DefaultDataModel
@{
    ViewBag.Title = "IntroView";
    Layout = "~/Views/Shared/_AnlandLayout.cshtml";
}

<div class="page-header">
    <h1 class="page-title">行政規章專區</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href='@Url.Action("Index","Home")'>首頁</a></li>
        <li class="breadcrumb-item active">行政規章專區</li>
    </ol>
    <div class="page-header-actions"></div>
</div>
<div class="page-content container-fluid">

    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">@Model.Subject</h3>
        </div>
        <div class="panel-body">
            <p><span class="min_title"><i class="icon wb-small-point" aria-hidden="true"></i> 發佈日期：</span>@Model.PostDate.Value.ToString("yyyy/MM/dd")</p>
            <p><span class="min_title"><i class="icon wb-small-point" aria-hidden="true"></i> 類  別：</span>@Model.Author</p>
            <p><span class="min_title"><i class="icon wb-small-point" aria-hidden="true"></i> 主題分類：</span>@Model.ThemeName <span class="min_title"><i class="icon wb-small-point" aria-hidden="true"></i> 施政分類：</span>@Model.CakeName <span class="min_title"><i class="icon wb-small-point" aria-hidden="true"></i> 服務分類：</span>@Model.ServiceName<br>
            <p>
                <span class="min_title"><i class="icon wb-small-point" aria-hidden="true"></i> 內  容：</span><br>
                <span class="infoText" style="white-space: pre-line">
                    @HttpUtility.HtmlDecode(Model.Body)
                </span>
            </p>
            <p><span class="min_title"><i class="icon wb-small-point" aria-hidden="true"></i> 聯絡人：</span>@Model.CreatedUser</p>
            <p><span class="min_title"><i class="icon wb-small-point" aria-hidden="true"></i> 聯絡單位：</span>@Model.CreatedDeptName</p>
            <p><span class="min_title"><i class="icon wb-small-point" aria-hidden="true"></i> 聯絡電話：</span>@Model.CreatedUserPhone</p>
            <div class="alert alert-success alert-dismissible" role="alert">
                <h4>附件：</h4>
                <ul>
                    @if (!string.IsNullOrWhiteSpace(Model.File1Momo))
                    {
                        <li>
                            <i class="icon wb-bookmark" aria-hidden="true"></i>@Model.File1Momo
                            <a href="@string.Format("/UploadedFiles/intro10/{0}",Model.Homepage2)" target="_blank" title="@Model.File1Momo 下載" download="@Model.Homepage2">
                                <i class="icon wb-file" aria-hidden="true"></i>
                            </a>
                        </li>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.File2Momo))
                    {
                        <li>
                            <i class="icon wb-bookmark" aria-hidden="true"></i>@Model.File2Momo
                            <a href="@string.Format("/UploadedFiles/intro10/{0}",Model.Homepage3)" target="_blank" title="@Model.File2Momo 下載" download="@Model.Homepage3">
                                <i class="icon wb-file" aria-hidden="true"></i>
                            </a>
                        </li>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.File3Momo))
                    {
                        <li>
                            <i class="icon wb-bookmark" aria-hidden="true"></i>@Model.File3Momo
                            <a href="@string.Format("/UploadedFiles/intro10/{0}",Model.Homepage4)" target="_blank" title="@Model.File3Momo 下載" download="@Model.Homepage4">
                                <i class="icon wb-file" aria-hidden="true"></i>
                            </a>
                        </li>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.File4Momo))
                    {
                        <li>
                            <i class="icon wb-bookmark" aria-hidden="true"></i>@Model.File4Momo
                            <a href="@string.Format("/UploadedFiles/intro10/{0}",Model.Homepage5)" target="_blank" title="@Model.File4Momo 下載" download="@Model.Homepage5">
                                <i class="icon wb-file" aria-hidden="true"></i>
                            </a>
                        </li>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.File5Momo))
                    {
                        <li>
                            <i class="icon wb-bookmark" aria-hidden="true"></i>@Model.File5Momo
                            <a href="@string.Format("/UploadedFiles/intro10/{0}",Model.Homepage6)" target="_blank" title="@Model.File5Momo 下載" download="@Model.Homepage6">
                                <i class="icon wb-file" aria-hidden="true"></i>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="panel-footer">
            <div class="form-group col-xl-12 text-right padding-top-m">
                <a href='@Url.Action("Index","Intro")' class="btn btn-primary" id="validateButton1">回上頁</a>
            </div>
        </div>
    </div>
</div>

