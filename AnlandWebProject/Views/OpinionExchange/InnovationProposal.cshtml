@section scripts{
    <script src="~/Scripts/Parsley/parsley.js"></script>
    <script>
        $(document).ready(function () {
            $('#sendproposal').on('click', function () {
                $('#proposalForm').parsley().validate();
                if ($('#proposalForm').parsley().isValid()) {
                    $('#proposalForm').submit();
                }
            });

            $('#btnModalDismiss').on('click', function () {
                var url = '/OpinionExchange/InnovationProposal';
                location = url;
            });
        });

        function SuccessMessage(result) {
            if (result) {
                $('#statusinfo').modal({ backdrop: 'static' }).modal('toggle');
            } else {
                ErrorMSG('送出失敗');
            }
        }

        function FailMessage() {
            ErrorMSG('送出失敗');
        }
    </script>
}
