                    <label class="btn btn-outline-secondary btn-sm font-default active" for="option2">
                        <span class="sr-only">中字型</span>
                        <input type="radio" name="中字型" title="中字型" id="option2" autocomplete="off" checked> 中
                    </label>
                    <label class="btn btn-outline-secondary btn-sm font-large" for="option3">
                        <span class="sr-only">大字型</span>
                        <input type="radio" name="大字型" title="大字型" id="option3" autocomplete="off"> 大
                    </label>
                </div>
            </div>
        </div>
        <!-- /麵包屑 -->
    </div>
</div>
<!-- 內文區 -->
<div class="container">
    <div class="row">
        <div class="card ml-3 mr-3 mt-3 subContent">
            @using (Ajax.BeginForm("QuestionnaireAnswerSave", "OpinionExchange", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "SuccessMessage(data)", OnFailure = "FailMessage" }, new { @id = "sendQuestionnaireForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="card-body" id="questionArea">
                    <div class="markTag"></div>
                    <div class="pl-5 pr-0">
                        <h2 class="pl-0">網路問卷</h2>
                        <div class="row">
                            <div class="col-md-6">
                                問卷名稱： {{originalData.QuestionName}}
                                <input type="hidden" name="questionid" :value="originalData.QuestionID" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                問卷說明：
                                <template v-if="originalData.Content == ''">
                                    無
                                </template>
                                <template v-else>
                                    {{originalData.Content}}
                                </template>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                有效時間： 自 {{moment(originalData.StartDay).format('YYYY/MM/DD')}} 至 {{moment(originalData.StopDay).format('YYYY/MM/DD')}}
                            </div>
                            <div class="col-md-6">
                                本問卷結果：
                                <template v-if="!originalData.IsOpen">
                                    不
                                </template>公開
                            </div>
                        </div>
                        <div class="row row-lg border-top border-bottom" style="padding-top: 5px;margin-top: 10px">
                            <div class="col-md-12 form-horizontal">
                                <div class="row" v-if="this.GetSingleOption().length > 0">
                                    <h3 class="pl-3"><span class="fas fa-bookmark"></span> 單選題：</h3>
                                    <template v-for="(item, index) in GetSingleOption()">
                                        <div class="col-md-12 ml-3 pb-2">
                                            {{index + 1}}. {{item.Question}}
                                        </div>
                                        <ul class="textOl-layout1 pl-4">
                                            <li class="col-md-12" v-for="(opt, ind) in item.Options">
                                                <input class="form-check-input" type="radio" title="單選題勾選項目" :name="'singleOpt[' + index + ']'" :id="'inputRadios' + index + ind" :value="ind + 1" title="單選項">
                                                <label class="form-check-label" :for="'inputRadios' + index + ind">{{opt}}</label>
                                            </li>
                                        </ul>
                                    </template>
                                </div>
                                <div class="row" v-show="GetMultipleOption().length > 0">
                                    <h3 class="pl-3"><span class="fas fa-bookmark"></span> 複選題：</h3>
                                    <template v-for="(item, index) in GetMultipleOption()">
                                        <div class="col-md-12 ml-3 pb-2">
                                            {{index + 1}}. {{item.Question}}
                                        </div>
                                        <ul class="textOl-layout1 pl-4">
                                            <li class="col-md-12" v-for="(opt, ind) in item.Options">
                                                <input class="form-check-input" type="checkbox" title="可多選的複選題勾選項目" :name="'multipleOpt[' + index + ']'" :id="'chk' + index + ind" :value="ind + 1">
                                                <label class="form-check-label" :for="'chk' + index + ind">{{opt}}</label>
                                            </li>
                                        </ul>
                                    </template>
                                </div>
                                <div class="row" v-show="GetQandA().length > 0">
                                    <h3 class="pl-3"><span class="fas fa-bookmark"></span> 問答題：</h3>
                                    <template v-for="(item, index) in GetQandA()">
                                        <div class="col-md-12 ml-3">
                                            <div class="form-group">
                                                <label for="questionTextarea1">{{index + 1}}. {{item.Question}}</label>
                                                <textarea class="form-control" title="請輸入你的答案" :name="'qanda[' + index + ']'" id="questionTextarea1" rows="3"></textarea>
                                            </div>
                                        </div>
                                    </template>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-right mt-3">
                        <a href="@Url.Action("Questionnaire", "OpinionExchange")" class="btn btn-outline-secondary">回上頁</a>
                        <button type="submit" class="btn btn-primary">送出問卷</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- /內文區 -->

@section scripts{
    <script src="~/Scripts/Vue/vue.min.js"></script>
    <script>
        var questionDataSource = @Html.Raw(ViewBag.QuestionData);
        var editQuestionVue = new Vue({
            el: '#questionArea',
            data: {
                originalData: questionDataSource,
            },
            methods: {
                GetSingleOption: function () {
                    var tempData = this.originalData.Questions;
                    tempData = tempData.filter(function (value, index) {
                        return value.Type == '單選';
                    });
                    return tempData;
                },
                GetMultipleOption: function () {
                    var tempData = this.originalData.Questions;
                    tempData = tempData.filter(function (value, index) {
                        return value.Type == '複選';
                    });
                    return tempData;
                },
                GetQandA: function () {
                    var tempData = this.originalData.Questions;
                    tempData = tempData.filter(function (value, index) {
                        return value.Type == '問答';
                    });
                    return tempData;
                }
            }
        });

        function SuccessMessage(result) {
            if (result) {
                var url = '/OpinionExchange/Questionnaire';
                SuccessMSGAfterAction("送出成功", url, 1000);
            } else {
                ErrorMSG('送出失敗');
            }
        }

        function FailMessage() {
            ErrorMSG('送出失敗');
        }
    </script>
}