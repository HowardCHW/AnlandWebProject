                }
                $('#docitem1Val').parsley().validate();
            });

            $('#purposeArea input[type=checkbox]').on('click', function () {
                if ($('#purposeArea input[type=checkbox]').is(':checked')) {
                    if ($('#purposeCheck').val() == '') {
                        $('#purposeCheck').val($(this).val());
                    }
                } else {
                    $('#purposeCheck').val('');
