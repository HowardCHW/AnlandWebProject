        window.Parsley.addValidator('verifyuid', {
            requirementType: 'string',
            validateString: function (value, data, parsleyInstance) {
                if (value.search(/^[A-Za-z](1|2)\d{8}$/i) == -1) {
                    return false;
                }

                //建立字母分數陣列(A~Z)
                var city = new Array(
                    1, 10, 19, 28, 37, 46, 55, 64, 39, 73, 82, 2, 11,
                    20, 48, 29, 38, 47, 56, 65, 74, 83, 21, 3, 12, 30
                )
                value = value.toUpperCase();
                //將字串分割為陣列(IE必需這麼做才不會出錯)
                value = value.split('');

                //計算總分
                var total = city[value[0].charCodeAt(0) - 65];
                for (var i = 1; i <= 8; i++) {
                    total += eval(value[i]) * (9 - i);
                }
                //補上檢查碼(最後一碼)
                total += eval(value[9]);
                //檢查比對碼(餘數應為0);
                return ((total % 10 == 0));
            },
            messages: {
                'zh-tw': '身分證格式錯誤!'
            }
        });

        function SuccessMessage(result) {
            if (result) {
                var url = '/OnlineApplication/Status';
                location = url;
            } else {
                ErrorMSG('送出失敗');
            }
        }

        function FailMessage() {
            ErrorMSG('送出失敗');
        }

        /* 去掉字串兩端的空白字元 */
        String.prototype.trim = function () {
            return this.replace(/(^\s+)|(\s+$)/g, "");
        }
