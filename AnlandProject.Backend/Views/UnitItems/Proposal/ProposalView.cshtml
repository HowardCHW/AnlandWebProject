@model AnlandProject.Service.BusinessModel.ProposalDataModel
@{
    Layout = "~/Views/Shared/_AnlandLayout.cshtml";
}

<div class="page-header">
    <h1 class="page-title">民眾參與創新提案</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">首頁</a></li>
        <li class="breadcrumb-item active">民眾參與創新提案</li>
    </ol>
    <div class="page-header-actions"></div>
</div>

<div class="page-content container-fluid">

    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">@Model.ProposalSubject</h3>
        </div>
        <div class="panel-body">
            <p>
                <span class="min_title"><i class="icon wb-small-point" aria-hidden="true"></i> 提案日期：</span>@Model.ProposalDate.ToString("yyyy/MM/dd")
            </p>
            <p><span class="min_title"><i class="icon wb-small-point" aria-hidden="true"></i> 提案人姓名：</span> @Model.Proposer</p>
            <p><span class="min_title"><i class="icon wb-small-point" aria-hidden="true"></i> 聯絡電話：</span>@Model.ContactPhone</p>
            <p><span class="min_title"><i class="icon wb-small-point" aria-hidden="true"></i> 提案人email：</span>@Model.ContactEmail</p>
            <p>
                <span class="min_title"><i class="icon wb-small-point" aria-hidden="true"></i> 提案說明：</span>
                <span class="infoText" style="white-space: pre-line">
                    @HttpUtility.HtmlDecode(Model.ProposalContent)
                </span>
            </p>
            <p>
                <span class="min_title"><i class="icon wb-small-point" aria-hidden="true"></i> 預期效益：</span>
                <span class="infoText" style="white-space: pre-line">
                    @HttpUtility.HtmlDecode(Model.ProposalBenefit)
                </span>
            </p>
        </div>
        <div class="panel-footer">
            <div class="form-group col-xl-12 text-right padding-top-m">
                <a href="@Url.Action("Index","Proposal")" class="btn btn-primary">回上頁</a>
            </div>
        </div>
    </div>
</div>

