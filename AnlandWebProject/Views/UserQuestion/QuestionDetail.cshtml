<!-- 內文區 -->
<div class="container">
    <div class="row">
        <div class="card ml-3 mr-3 mt-3 subContent">
            <div class="card-body">
                <div class="markTag"></div>
                <h2>@Model.Subject</h2>
                <p class="content-info">
                    <span>類別：@Model.ClassfyName</span>
                    <span>發布日期：@Model.SubmitDate.Value.ToString("yyyy/MM/dd")</span>
                </p>
                <p>
                    <span style="white-space: pre-line">
                        @HttpUtility.HtmlDecode(Model.Content)
                    </span>
                </p>
                <ul class="textUl-list content-info text-left">
                    <li>發布單位：基隆市安樂地政事務所</li>
                    @if (string.IsNullOrWhiteSpace(Model.CreatedUser)) { <li> 聯絡人：基隆市安樂地政事務所 </li> } else { <li>聯絡人：@Model.CreatedUser</li> }
                    @if (string.IsNullOrWhiteSpace(Model.CreatedUserPhone)) { <li>聯絡電話：02 - 24324001</li> } else { <li>聯絡電話：@Model.CreatedUserPhone</li> }
                    <li>更新日期：@string.Format("{0:yyyy/MM/dd}", Model.SubmitDate)</li>
                    <li>瀏覽人數：@string.Format("{0} 人", Model.Hit)</li>
                </ul>
            </div>
        </div>
        <div class="col-lg-12 d-flex mt-3 justify-content-end align-items-center d-print-none">
            <a class="btn btn-primary btn-sm mr-3" role="button" href="@Url.Action("Index","UserQuestion")">
                <span class="fal fa-external-link-square" aria-hidden="true"></span> 回導覽頁
            </a>
        </div>
    </div>
</div>
<!-- /內文區 -->